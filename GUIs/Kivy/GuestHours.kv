<GuestHoursPage>:
    name: 'GuestHoursPage'                       #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/HotelHoursbg.png'    #background image of screen

    Label:
        id: Breakfast
        markup: True
        text:'[b][u]Breakfast:[/u][/b]'                                                            
        pos_hint: {'center_x': .18, 'center_y': .9}
        size_hint: (.25, .25)              
        font_size: 35
    Label:
        id: BreakfastTime
        text:'6:00am - 9:00am'                                                            
        pos_hint: {'center_x': .22, 'center_y': .8}
        size_hint: (.25, .25)              
        font_size: 30

    Label:
        id: Pool
        markup: True
        text: '[b][u]Pool:[/u][/b]'                                                              
        pos_hint: {'center_x': .13, 'center_y': .67}
        size_hint: (.25, .25)              
        font_size: 35

    Label:
        id: PoolTimes
        text: '7:00am - 1:45pm, 5:00pm - 9:45pm'                                                              
        pos_hint: {'center_x': .37, 'center_y': .57}
        size_hint: (.25, .25)              
        font_size: 30

    Label:
        id: FitnessCenter
        markup: True
        text: '[b][u]Fitness Center:[/u][/b]'
        pos_hint: {'center_x': .22, 'center_y': .44}
        size_hint: (.25, .25)              
        font_size: 35

    Label:
        id: FitnessCenterTimes
        text: '5:00am - 1:45pm, 5:00pm - 9:45pm'
        pos_hint: {'center_x': .37, 'center_y': .34}
        size_hint: (.25, .25)              
        font_size: 30

    Label:
        id: BusinessCenter
        markup: True
        text: '[b][u]Business Center:[/u][/b]'
        pos_hint: {'center_x': .24, 'center_y': .21}
        size_hint: (.25, .25)              
        font_size: 35

    Label:
        id: BusinessCenterTimes
        text: '5:00am - 9:45pm'
        pos_hint: {'center_x': .22, 'center_y': .12}
        size_hint: (.25, .25)              
        font_size: 30

    