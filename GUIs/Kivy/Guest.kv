<GuestPage>:
    name: 'GuestPage'                       #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/guestbg.jpg'    #background image of screen

    Button:
        id: Checking                                                                               #name of button
        text: ''           
        background_normal: root.checkType()                                                              #text in button
        pos_hint: {'center_x': .2, 'center_y': .8}
        size_hint: (.39, .29) 
        on_press:
            #Still need to determine if guest already has a room and take that into account w/ buttons
            Factory.Checking().open()

    Button:
        id: HotelInfo                                                                               #name of button
        text: ''                   
        background_normal: 'images/HotelHoursB2.png'                                                        #text in button
        pos_hint: {'center_x': .2, 'center_y': .5}
        size_hint: Checking.size_hint
        on_press:
            app.root.current = 'GuestHoursPage'                                                                #allows resize

    Button:
        id: RoomService                                                                               #name of button
        text: ''         
        background_normal: 'images/RoomServiceB.png'                                                                  #text in button
        pos_hint: {'center_x': .5, 'center_y': .24}
        size_hint: Checking.size_hint                                                                #allows resize
        on_press: 
            root.getRoomService()

    Button:
        id: HotSpots                                                                               #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .825, 'center_y': .24}
        size_hint: Checking.size_hint  
        background_normal: 'images/HotSpotsB.png'  
        on_press:
            app.root.current = 'HotSpotsPage'                                                                 #allows resize

    Label:
        id: clock
        text:''     
        markup: True                                                       
        pos_hint: {'center_x': .67, 'center_y': .75}
        size_hint: Checking.size_hint    
        font_size: 70

    Label:
        id: date
        text: '' 
        markup: True                                                             
        pos_hint: {'center_x': .67, 'center_y': .66}
        size_hint: Checking.size_hint
        font_size: 50

    Label:
        id: room
        markup: True
        text: ' [b]Room:[/b] [font=Consolai]Not Checked In[/font]'    
        pos_hint: {'center_x': .66, 'center_y': .575}
        size_hint: Checking.size_hint
        font_size: 40
        
    Button:
        id: Profile                                                                            #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .2, 'center_y': .2}
        size_hint: (.22,.3)
        background_normal: 'images/profileButton.png'
        on_press:
            app.root.current = 'GuestProfilePage'                                                                 #allows resize

    Button:
        id: SignOut
        text: '[b]Sign Out[/b]'
        markup: True
        pos_hint: {'center_x': .949, 'center_y': .029}
        size_hint: (.1, .05)
        background_color: (2,0,0,10)
        on_press: 
            app.root.current = 'LogPage'
