<SpecialRequests>:
    id: SpecialRequests
    title: ""                   #No need for a title but it has to be here
    size_hint : (None,None)
    width : 750                 #Make the confirmation smaller than screen
    height: 450
    auto_dismiss: False         #Don't exit box until user presses button
    on_dismiss: 
        if root.page == 'Food': app.root.get_screen("FoodPage").addCart() 
        if root.page == 'Toiletries': app.root.get_screen("ToiletriesPage").addCart()
        if root.page == 'Internet': app.root.get_screen('InternetPage').addCart()

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint: 1, 0.9
            Label:
                id: checkIn
                text: 'Please Enter Any Special Requests You Would Like For Your Order:'
                font_size: 18

        ScatterLayout:
            rows: 1
            row_force_default: True
            row_default_height: '46dp'
            col_force_default: True
            col_default_width: '150dp'
            TextInput:
                id: request                                    #Name of textbox
                text: 'None'                                   #text in textbox
                pos_hint:  {'center_x': .5, 'center_y': .9}    #postion relative ot password box NOTE: the + portion of the y is used as an offset to space objects
                size_hint: (.6, .6)
            
            Button:
                text: 'Add to Cart'
                pos_hint: {'center_x': .7, 'center_y': .3}
                size_hint: .3, .2
                on_press: 
                    root.Continue()
                    
            Button:
                text: 'Cancel'
                pos_hint: {'center_x': .3, 'center_y': .3}
                size_hint: .3, .2
                on_release: root.dismiss()