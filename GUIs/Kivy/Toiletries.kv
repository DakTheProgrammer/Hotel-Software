<ToiletriesPage>:
    name: 'ToiletriesPage'                   #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/guestbg.jpg'


    Button:
        id: Back                                                                              #name of button
        text: 'Add to Cart'                                                                           #text in button
        size_hint: (.2, .1)                                                                  #allows resize
        pos_hint: {'center_x': 0.75, 'center_y': 0.1} 
        on_press: 
            root.requesting()
    Button:
        id: Description                                                                             #name of button
        text: 'Show Description'                                                                           #text in button
        size_hint: (.2, .1)                                                                  #allows resize
        pos_hint: {'center_x': 0.5, 'center_y': 0.1} 
        on_press: root.showDescription()


    Button:
        id: Back                                                                              #name of button
        text: 'Back'                                                                           #text in button
        size_hint: (.2, .1)                                                                  #allows resize
        pos_hint: {'center_x': 0.25, 'center_y': 0.1} 
        on_press: 
            app.root.current = 'GuestRoomServicePage'