<ManagerInterfacePage>:
    name: 'ManagerInterfacePage'            #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/managerinterfacebg.jpg'

    Button:
        id: Add                                                                                 #name of button
        text: 'Add Employee'                                                                           #text in button
        pos_hint: {'center_x': 0.75, 'center_y': 0.15}
		size_hint: (.4, .05)                                                                 #allows resize 
        on_press: 
            app.root.current = 'ManagerSignUpPage'                                           #Goes to Interface page
    
    Button:
        id: Remove                                                                              #name of button
        text: 'Remove Employee'                                                                           #text in button
        size_hint: (.4, .05)                                                                 #allows resize
        pos_hint: {'center_x': 0.25, 'center_y': 0.15} 
        on_press: 
            root.remove()

    Button:
        id: Back                                                                              #name of button
        text: 'Back'                                                                           #text in button
        size_hint: (.4, .05)                                                                 #allows resize
        pos_hint: {'center_x': 0.75, 'center_y': 0.0775} 
        on_press: 
            app.root.current = 'ManagerPage'

    Button:
        id: Update                                                                              #name of button
        text: 'Update'                                                                           #text in button
        size_hint: (.4, .05)                                                                 #allows resize
        pos_hint: {'center_x': 0.25, 'center_y': 0.0775} 
        on_press: 
            root.up()