<HotSpotsPage>:
    name: 'HotSpotsPage'                   #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/guestbg.jpg'

    MapView:                                #This is good enough for now
        id: map                             #Does not show anything on map but city/road names
        lat: root.getLat()
        lon: root.getLon()
        zoom: 18                            #Zoom in to be able to see local places
    
    Button:
        id: Exit
        text: ''
        pos_hint: {'center_x': .915, 'center_y': .93}
        size_hint: (.15, .12)
        background_normal: 'images/mapXButton.png'
        on_press: 
            app.root.current = 'GuestPage'