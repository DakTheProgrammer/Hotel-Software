<BellhopPage>:
    name: 'BellhopPage'                   #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/roomservicebg.jpg'

    Button:
        id: Guests                                                                               
        text: ''                                                                           
        pos_hint: {'center_x': .2, 'center_y': .8}
        size_hint: (.4, .3)        
        background_normal: 'images/BellGuestsB.png'                                                             
        on_press: 
            app.root.current = 'BellGuestPage'

    Button:
        id: Lugagae                                                                               
        text: ''                                                                           
        pos_hint: {'center_x': .2, 'center_y': .5}
        size_hint: Guests.size_hint  
        background_normal: 'images/BellLuggageB.png'                                                             
        on_press: 
            app.root.current = 'BellLugagePage'

    Button:
        id: Important                                                                               
        text: ''                                                                    
        pos_hint: {'center_x': .5, 'center_y': .24}
        size_hint: Guests.size_hint   
        background_normal: 'images/BellImportantB.png'                                                             
        on_press: 
            app.root.current = 'BellImportantPage'

    Button:
        id: Mail                                                                               #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .825, 'center_y': .24}
        size_hint: Guests.size_hint  
        background_normal: 'images/MailB.png'                                                                        #allows resize 
        on_press:
            app.root.current = 'MailPage' 

    Label:
        id: clock
        text:''     
        markup: True                                                       
        pos_hint: {'center_x': .7, 'center_y': .7}
        size_hint: Guests.size_hint    
        font_size: 70

    Label:
        id: date
        text: '' 
        markup: True                                                             
        pos_hint: {'center_x': .7, 'center_y': .61}
        size_hint: Guests.size_hint
        font_size: 50

       
    Button:
        id: Profile                                                                        #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .2, 'center_y': .2}
        size_hint: (.25,.3)
        background_normal: 'images/profileB.png'
        on_press:
            app.root.current = 'ProfilePage'  

    Button:
        id: SignOut
        text: '[b]Sign Out[/b]'
        markup: True
        pos_hint: {'center_x': .949, 'center_y': .029}
        size_hint: (.1, .05)
        background_color: (2,0,0,10)
        on_press: 
            app.root.current = 'LogPage'