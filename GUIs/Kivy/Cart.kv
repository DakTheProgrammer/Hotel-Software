<CartPage>:
    name: 'CartPage'                   #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/guestbg.jpg'


    Button:
        id: Back                                                                              #name of button
        text: 'Checkout'                                                                           #text in button
        size_hint: (.2, .1)                                                                  #allows resize
        pos_hint: {'center_x': 0.62, 'center_y': 0.1} 
        on_press: 
            root.checkout()
    Button:
        id: Empty
        text: 'Empty Cart'
        size_hint: (.2, .1)                                                                  #allows resize
        pos_hint: {'center_x': 0.15, 'center_y': 0.1} 
        on_press: 
            root.emptyCart()

    Button:
        id: Selected
        text: 'Remove Selected'
        size_hint: (.2, .1)                                                                  #allows resize
        pos_hint: {'center_x': 0.39, 'center_y': 0.1} 
        on_press: 
            root.removeSelected()

    Button:
        id: Back                                                                              #name of button
        text: 'Back'                                                                           #text in button
        size_hint: (.2, .1)                                                                  #allows resize
        pos_hint: {'center_x': 0.85, 'center_y': .1} 
        on_press: 
            app.root.current = 'GuestRoomServicePage'
