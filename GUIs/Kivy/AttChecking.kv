<AttendantCheckingPage>:
    name: 'AttendantCheckingPage'                   #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            #source: 'images/bellhopbg.jpg'

    Button:
        id: Add                                                                                 #name of button
        text: 'Check In/Out Guest'                                                                           #text in button
        pos_hint: {'center_x': 0.75, 'center_y': 0.15}
		size_hint: (.4, .05)                                                                 #allows resize 

        on_press:   
            #Still need to determine if guest already has a room and take that into account w/ buttons
            Factory.Checking().open()

    Button:
        id: Back                                                                              #name of button
        text: 'Back'                                                                           #text in button
        size_hint: (.4, .05)                                                                 #allows resize
        pos_hint: {'center_x': 0.25, 'center_y': 0.15} 
        on_press: 
            app.root.current = 'AttendantPage'