<ManagerPage>:
    name: 'ManagerPage'                   #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/managerbg.jpg'

    Button:
        id: Staff                                                                               #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .2, 'center_y': .8}
        size_hint: (.39, .29)                                                                    #allows resize
        background_normal: 'images/ManStaffB.png'      
        on_press: 
            app.root.current = 'ManagerInterfacePage'                                           #Goes to Interface page

    Button:
        id: Rooms                                                                               #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .2, 'center_y': .5}
        size_hint: Staff.size_hint                                                              #allows resize 
        background_normal: 'images/AttRoomsB.png'                                                                        
        on_press: 
            app.root.current = 'ManagerRoomPage'

    Button:
        id: Revenue                                                                               #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .5, 'center_y': .24}
        size_hint: Staff.size_hint       
        background_normal: 'images/ManRevenueB.png'                                                                        #allows resize                                                          #allows resize
        on_press: 
            app.root.current = 'ManagerRevenuePage'

    Button:
        id: Mail                                                                               #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .825, 'center_y': .24}
        size_hint: Staff.size_hint  
        background_normal: 'images/MailB.png'                                                                        #allows resize 
        on_press:
            app.root.current = 'MailPage' 

    Label:
        id: clock
        text:''     
        markup: True                                                       
        pos_hint: {'center_x': .7, 'center_y': .7}
        size_hint: Staff.size_hint    
        font_size: 70

    Label:
        id: date
        text: '' 
        markup: True                                                             
        pos_hint: {'center_x': .7, 'center_y': .61}
        size_hint: Staff.size_hint
        font_size: 50

       
    Button:
        id: Profile                                                                        #name of button
        text: ''                                                                           #text in button
        pos_hint: {'center_x': .2, 'center_y': .2}
        size_hint: (.25,.3)
        background_normal: 'images/profileB.png'
        on_press:
            app.root.current = 'ProfilePage'  

    Button:
        id: SignOut
        text: '[b]Sign Out[/b]'
        markup: True
        pos_hint: {'center_x': .949, 'center_y': .029}
        size_hint: (.1, .05)
        background_color: (2,0,0,10)
        on_press: 
            app.root.current = 'LogPage'