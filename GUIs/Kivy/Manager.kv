<ManagerPage>:
    name: 'ManagerPage'                   #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/managerbg.jpg'

    Button:
        id: Staff                                                                               #name of button
        text: 'Staff'                                                                           #text in button
        pos_hint: {'center_x': .25, 'center_y': .725}
        size_hint: (.4, .3)                                                                     #allows resize
        on_press: 
            app.root.current = 'ManagerInterfacePage'                                           #Goes to Interface page

    Button:
        id: Rooms                                                                               #name of button
        text: 'Rooms'                                                                           #text in button
        pos_hint: {'center_x': .25, 'center_y': .3}
        size_hint: Staff.size_hint                                                                     #allows resize
        on_press: 
            app.root.current = 'ManagerRoomPage'

    Button:
        id: Revenue                                                                               #name of button
        text: 'Revenue'                                                                           #text in button
        pos_hint: {'center_x': .75, 'center_y': .3}
        size_hint: Staff.size_hint                                                                #allows resize
        on_press: 
            app.root.current = 'ManagerRevenuePage'

    Label:
        id: clock
        text:''                                                            
        pos_hint: {'center_x': .8, 'center_y': .75}
        size_hint: Staff.size_hint
        font_size: 50

    Label:
        id: date
        text: ''                                                              
        pos_hint: {'center_x': .755, 'center_y': .675}
        size_hint: Staff.size_hint
        font_size: 25
