<ProfilePage>:
    name: 'ProfilePage'                       #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/Profilebg.png'    #background image of screen

    Image:
        id: Picture
        source: ''
        pos_hint: {'center_x': .15, 'center_y': .75}
        size_hint: (.3, .3)

    Label:
        id: Name
        text: ''
        markup: True
        pos_hint: {'center_x': .5, 'center_y': .75}
        size_hint: (.4, .4)
        font_size: 40

