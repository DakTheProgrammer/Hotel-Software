<GuestRoomServicePage>:
    name: 'GuestRoomServicePage'                       #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/Profilebg.png'    #background image of screen

    Button:
        id: Food
        text: ''
        pos_hint: {'center_x': .2, 'center_y': .7}
        size_hint: (.3, .3)
        background_normal: 'images/FoodB.png'
        on_press: 
            app.root.current = 'FoodPage'

    Button:
        id: Toiletries
        text: ''
        pos_hint: {'center_x': .5, 'center_y': .7}
        size_hint: (.3, .3)
        background_normal: 'images/ToiletriesB.png'
        on_press: 
            app.root.current = 'ToiletriesPage'

    Button:
        id: Internet
        text: ''
        pos_hint: {'center_x': .35, 'center_y': .4}
        size_hint: (.3, .3)
        background_normal: 'images/InternetB.png'
        on_press: 
            app.root.current = 'InternetPage'


    Button:
        id: Cart
        text: '[b]Cart[b]'
        markup: True
        font_size: 25
        pos_hint: {'center_x': .35, 'center_y': .15}
        size_hint: (.2, .085)
        background_color: '#000000'
        on_press: root.getCart()

    Image:
        id: CartPic
        source: 'images/Cart.png'
        pos_hint: {'center_x': .265, 'center_y': .15}
        size_hint: (.13,.13)
