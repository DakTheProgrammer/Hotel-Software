<GuestRoomServicePage>:
    name: 'GuestRoomServicePage'                       #name of the page

    canvas:
        Rectangle:                          #essentialy is the background
            pos: self.pos                   #placed on screen
            size: self.size                 #size of screen
            source: 'images/guestbg.jpg'    #background image of screen

    Button:
        id: Food
        text: 'Food'
        pos_hint: {'center_x': .2, 'center_y': .55}
        size_hint: (.25, .25)
        on_press: 
            app.root.current = 'FoodPage'

    Button:
        id: Toiletries
        text: 'Toiletries'
        pos_hint: {'center_x': .5, 'center_y': .55}
        size_hint: (.25, .25)
        on_press: 
            app.root.current = 'ToiletriesPage'

    Button:
        id: Internet
        text: 'Internet Packages'
        pos_hint: {'center_x': .8, 'center_y': .55}
        size_hint: (.25, .25)
        on_press: 
            app.root.current = 'InternetPage'


    Button:
        id: Cart
        text: 'Cart'
        pos_hint: {'center_x': .88, 'center_y': .25}
        size_hint: (.15, .075)
        on_press: root.getCart()

    Button:
        id: Exit
        text: 'X'
        pos_hint: {'center_x': .949, 'center_y': .959}
        size_hint: (.05, .05)
        on_press: 
            app.root.current = 'GuestPage'